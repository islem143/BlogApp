<%- include('../Components/Head.ejs') %> 
<%- include('../Components/Navigation.ejs') %> 


<div class="container mt-5">
    <div class="text-center mb-5" >
        <h1><a href="SignUp" class="btn btn-secondary btn-lg ">Sign Up</a> / <a href="/LogIn" class="btn btn-secondary btn-lg active">Log In</a> </h1>
    </div>
    <% if(message) { %>
      <div class="alert alert-danger" role="alert">
        <%=message%> 
      </div>
      <% } %> 
    <form action="/NewPassword" method="POST">
        <div class="form-group mt-4">
          <label for="password">New Password</label>
          <input type="password" class="form-control" id="password" name="password" placeholder="Enter password">

        </div>
        <!-- <div class="form-group mt-4">
          <label for="confirmPassword">Confirm Password</label>
          <input type="password" class="form-control" id="confirmPassword" placeholder="Confirm Password" name="confirmPassword">
        </div> -->
        <input type="hidden" name="userId" value="<%=userId%>">
        <input type="hidden" name="token" value="<%=token%>">
        <button type="submit " class="btn btn-outline-primary text-primary mt-4">Update Password</button>
        <input type="hidden" name="_csrf" value="<%= csrfToken %>" >
      </form>
    

</div>











